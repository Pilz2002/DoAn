@model WebBanHangOnline.Models.OrderViewModel
<div class="col-md-7">
    @using (Ajax.BeginForm("Checkout", "ShoppingCart", new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "load_data",
        OnComplete = "OnSuccess",
        OnFailure = "OnFailure"
    },new {@id = "myForm"}))
    {
        @Html.AntiForgeryToken()
        <h3>Thông tin khách hàng</h3>
        <div class="form-group">
            <label>Họ tên khách hàng: </label>
            <input type="text" name="CustomerName" class="form-control" autocomplete="off" />
        </div>
        <div class="form-group">
            <label>Số điện thoại </label>
            <input type="tel" name="Phone" class="form-control" autocomplete="off" />
        </div>
        <div class="form-group">
            <label>Địa chỉ </label>
            <input type="text" name="Address" class="form-control" autocomplete="off" />
        </div>
        <div class="form-group">
            <label>Email </label>
            <input type="email" name="Email" class="form-control" autocomplete="off" />
        </div>
        <div class="form-group">
            <label>Hình thức thanh toán </label>
            <select class="form-control" name="TypeOfPayment">
                <option value="1" selected>COD</option>
                <option value="2">Chuyển khoản online</option>
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-success">Đặt hàng</button>
        </div>
    }
</div>

