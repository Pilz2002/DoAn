@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    <div class="sidebar">
        <div class="sidebar_section">
            <div class="sidebar_title">
                <h5>Product Category</h5>
            </div>
            <ul class="sidebar_categories">
                @foreach (var item in Model)
                {
                    if (ViewBag.CateId == item.Id)
                    {
                        <li class="active"><a href="/san-pham/@item.Alias-@item.Id"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>
                    }
                    else
                    {
                        <li><a href="/san-pham/@item.Alias-@item.Id">@item.Title</a></li>
                    }
                }
            </ul>
        </div>

        <!-- Price Range Filtering -->
        <div class="sidebar_section">
            <div class="sidebar_title">
                <h5>Filter by Price</h5>
            </div>
            <p>
                <input type="text" id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
            </p>
            <div id="slider-range"></div>
            <div class="filter_button"><span>filter</span></div>
            @Html.Action("Refresh", "Home")
        </div>

